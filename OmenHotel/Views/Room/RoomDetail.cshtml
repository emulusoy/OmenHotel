                </div>
            </div>
        </div>
    </header>

    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>Our Rooms</h2>
                        <div class="bt-option">
                            <a href="/Default/Index">Home</a>
                            <span>Rooms</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <h2></h2>
    <section class="room-details-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="room-details-item">
                        @{
                            string imageUrl = "/omen/img/room/room-details.jpg";
                            if (Model != null && Model.property != null && Model.property.photoUrls != null && Model.property.photoUrls.Length > 0)
                            {
                                imageUrl = Model.property.photoUrls[0];
                            }
                        }
                        <img src="@imageUrl" alt="@(Model?.property?.name ?? "Hotel Room")">
                        <div class="rd-text">
                            <div class="rd-title">
                                <h3>@(Model?.property?.name ?? "N/A")</h3> 
                                <div class="rdt-right">
                                    <div class="rating">
                                        <span>(@(Model?.property?.reviewCount ?? 0) Reviews)</span> 
                                    </div>
                                    <a href="#">Book Now</a>
                                </div>
                            </div>
                            <h2>@($"{Math.Round(Model.property.priceBreakdown.grossPrice.value):N0} {Model.property.priceBreakdown.grossPrice.currency}") Per Night</h2>

                            <table>
                                <tbody>
                                    <tr>
                                        <td class="r-o">Rating:</td>
                                        <td>@(Model?.property?.reviewScore.ToString("F1") ?? "N/A") (@(Model?.property?.reviewScoreWord ?? "No reviews yet"))</td>
                                    </tr>
                                    @if (Model != null && Model.benefitBadges != null)
                                    {
                                        foreach (var badge in Model.benefitBadges)
                                        {
                                            <tr>
                                                <td class="r-o">@badge.variant:</td>
                                                <td>@badge.text</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td class="r-o">Details:</td>
                                            <td>No specific benefit badges available.</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td class="r-o">Check-in:</td>
                                        <td>@(Model?.property?.checkin?.fromTime ?? "N/A") - @(Model?.property?.checkin?.untilTime ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Check-out:</td>
                                        <td>@(Model?.property?.checkout?.fromTime ?? "N/A") - @(Model?.property?.checkout?.untilTime ?? "N/A")</td> 
                                    </tr>
                                </tbody>
                            </table>
                            <p class="f-para">
                                @(Model?.accessibilityLabel ?? "No detailed description available.")
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <footer class="footer-section">
        <div class="container">
            <div class="footer-text">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="ft-about">
                            <div class="logo">
