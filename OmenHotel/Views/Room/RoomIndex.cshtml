    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>Our Rooms</h2>
                        <div class="bt-option">
                            <a href="/Default/Index">Home</a>
                            <span>Rooms</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="rooms-section spad">
        <div class="container">
            <div class="row">
                @if (Model != null)
                {
                    @foreach (var hotel in Model)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="room-item">
                                @if (hotel.property.photoUrls != null && hotel.property.photoUrls.Any())
                                {
                                    <img src="@hotel.property.photoUrls.FirstOrDefault()" alt="@hotel.property.name">
                                }
                                else
                                {
                                    <img src="/omen/img/default-hotel.jpg" alt="Default Image">
                                }

                                <div class="ri-text">
                                    <h4>@hotel.property.name</h4>
                                    <h3>
                                        @if (hotel.property.priceBreakdown != null && hotel.property.priceBreakdown.grossPrice != null)
                                        {
                                            var price = hotel.property.priceBreakdown.grossPrice.value;
                                            var currency = hotel.property.priceBreakdown.grossPrice.currency;

                                            @($"{Math.Round(price):N0} {currency}")
                                            <span>-Gece</span>
                                        }
                                        else
                                        {
                                            <span>Fiyat Bilgisi Yok</span>
                                        }
                                    </h3>
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td class="r-o">Puan:</td>
                                                <td>
                                                    @if (hotel.property.reviewScore != null)
                                                    {
                                                        @hotel.property.reviewScore.ToString("F1")
                                                    }
                                                    else
                                                    {
                                                        <span>Yok</span>
                                                    }
                                                    (@hotel.property.reviewScoreWord)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="r-o">İnceleme:</td>
                                                <td>@hotel.property.reviewCount reviews</td>
                                            </tr>
                                            @{
                                                DateTime? checkin = DateTime.TryParse(hotel.property.checkinDate, out var tempCheckin) ? tempCheckin : (DateTime?)null;
                                                DateTime? checkout = DateTime.TryParse(hotel.property.checkoutDate, out var tempCheckout) ? tempCheckout : (DateTime?)null;
                                            }
                                            <tr>
                                                <td class="r-o">Check-in:</td>
                                                <td>@(checkin?.ToString("dd.MM.yyyy") ?? "-")</td>
                                            </tr>
                                            <tr>
                                                <td class="r-o">Check-out:</td>
                                                <td>@(checkout?.ToString("dd.MM.yyyy") ?? "-")</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    @if (hotel.property.photoUrls != null && hotel.property.photoUrls.Any())
                                    {
                                        <a href="/Room/RoomDetail/@hotel.hotel_id" class="primary-btn">Detaylar</a>
                                    }
                                    else
                                    {
                                        <a href="/Room/RoomDetail/@hotel.hotel_id" class="primary-btn">Detaylar</a>
                                    }

                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-lg-12 text-center">
                        <p>Otel bulunamadı veya bir hata oluştu.</p>
                    </div>
                }
            </div>
        </div>
    </section>


